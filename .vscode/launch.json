	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Main Process",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}/bin",
			"runtimeExecutable": "electron",
			"args" : [ "--inspect=5858", "${workspaceFolder}/bin"],
			"outputCapture": "std",
		},
		{
			"name": "Debug Application",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}/bin",
			"runtimeExecutable": "electron",
			"args" : ["${workspaceFolder}/bin"],
			"outputCapture": "std",
		}
	]
}